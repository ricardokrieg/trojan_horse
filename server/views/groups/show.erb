<div id='group'>
    <% if @clients.any? %>
        <div class='client-list'>
            <div class='row'>
                <% @clients.each do |client| %>
                    <div class='col-xs-12 col-md-6'>
                        <div class='client'>
                            <div class='client-thumbnail <%= 'inactive' unless client.active? %>'>
                                <img src="data:image/jpg;base64,<%= client.thumbnail %>" />
                            </div>

                            <div class='client-name'>
                                <div class='name'>
                                    <%= client.display_name(true) %>
                                </div>

                                <% if client.active? %>
                                    <div class='activity text-success'>
                                        <strong>Running</strong>
                                    </div>
                                <% else %>
                                    <div class='activity text-warning'>
                                        <strong>Last Activity: </strong>
                                        <%= client.last_activity %>
                                    </div>
                                <% end %>

                                <span class='look'>
                                    <a href='/clients/<%= client.id %>' class='btn btn-lg btn-primary'><i class='fa fa-search'></i> Look</a>
                                </span>

                                <span class='edit'>
                                    <a href='/clients/<%= client.id %>/edit' class='btn btn-lg btn-primary'><i class='fa fa-edit'></i> Edit</a>
                                </span>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    <% else %>
        <div class='no-clients'>No clients</div>
    <% end %>
</div>

<div id='group-actions'>
    <span class='back'>
        <a href='/' class='btn btn-lg btn-primary'><i class='fa fa-reply'></i> Back to Group list</a>
    </span>

    <span class='edit'>
        <a href='/groups/<%= @group.primary_key %>/edit' class='btn btn-lg btn-primary'><i class='fa fa-edit'></i> Edit Group</a>
    </span>

    <span class='destroy'>
        <a href='/groups/<%= @group.primary_key %>/destroy' class='confirm btn btn-lg btn-danger' title='Are you sure you want to delete this group?'><i class='fa fa-ban'></i> Delete Group</a>
    </span>
</div>

<script type='text/javascript'>
    $(document).ready(window.check_group_actions_shadow());
    $(window).resize(window.check_group_actions_shadow);
    $(window).scroll(window.check_group_actions_shadow);
</script>
